<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="www.dinesh21395.tk.sta.UpdateStudent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Rollnumber"
        android:id="@+id/textView21"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="117dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText15"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Busnumber"
        android:id="@+id/textView22"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView21" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText16"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignLeft="@+id/editText15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:onClick="update"
        android:id="@+id/button28"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/editText16"
        android:layout_toRightOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_above="@+id/editText15"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
