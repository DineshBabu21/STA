<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">

    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:id="@+id/txtnewsbusno"
        android:layout_alignParentLeft="true"
        android:text="Busno"
        android:gravity="center"
        android:textAllCaps="true">
    </TextView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/txtnewsdate"
        android:layout_toRightOf="@id/txtnewsbusno"
        android:text="Date"
        android:gravity="center">
    </TextView>
    <TextView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:id="@+id/txtnewsinfo"
        android:layout_toRightOf="@id/txtnewsdate"
        android:text="Info"
        android:gravity="center">
    </TextView>

</RelativeLayout>