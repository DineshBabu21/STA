<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="www.dinesh21395.tk.sta.AdminRoute">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativelayout2">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:text="Busno"
            android:textColor="@color/red"
            android:gravity="center"
            android:textAllCaps="true"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Route"
            android:gravity="center"
            android:textColor="@color/red"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView4"
            android:textAllCaps="true"/>

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/listview3"
        android:layout_below="@+id/relativelayout2">
    </ListView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/button19"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="insertroute"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:onClick="update"
        android:id="@+id/button20"
        android:layout_above="@+id/button24"
        android:layout_alignEnd="@+id/button24" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button21"
        android:layout_alignParentBottom="true"
        android:onClick="deleteroute"
        android:layout_alignEnd="@+id/listview3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:onClick="refresh"
        android:id="@+id/button24"
        android:layout_alignTop="@+id/button19"
        android:layout_centerHorizontal="true" />


</RelativeLayout>