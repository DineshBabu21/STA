<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/txtbusno"
        android:layout_alignParentLeft="true"
        android:text="Busno"
        android:gravity="center"
        android:textAllCaps="true">
    </TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/txtrollno"
        android:layout_toRightOf="@id/txtbusno"
        android:text="Rollnumber"
        android:gravity="center">
    </TextView>
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/txtname"
        android:layout_toRightOf="@id/txtrollno"
        android:text="Name"
        android:gravity="center">
    </TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/txtdept"
        android:layout_toRightOf="@id/txtname"
        android:text="Department"
        android:gravity="center">
    </TextView>

</RelativeLayout>